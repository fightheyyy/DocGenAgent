# Gauz文档Agent系统配置

# ===== 基础配置 =====
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 外部服务URL
TEMPLATE_API_URL=http://43.139.19.144:8003
RAG_API_URL=http://43.139.19.144:8001

# 请求超时设置
API_TIMEOUT=30

# 跳过健康检查（开发时使用）
SKIP_HEALTH_CHECK=true

# ===== MinIO对象存储配置 =====

# MinIO服务器地址（外部服务器）
MINIO_ENDPOINT=43.139.19.144:9000

# MinIO访问密钥
MINIO_ACCESS_KEY=minioadmin

# MinIO密钥
MINIO_SECRET_KEY=minioadmin

# 是否使用HTTPS连接（外部服务器通常建议使用HTTPS）
MINIO_SECURE=false

# 存储桶名称（会自动创建）
MINIO_BUCKET_NAME=gauz-documents

# MinIO区域（AWS S3兼容）
MINIO_REGION=us-east-1

# 下载URL有效期（小时）
MINIO_URL_EXPIRY_HOURS=24

# 文件路径前缀
MINIO_PATH_PREFIX=documents 